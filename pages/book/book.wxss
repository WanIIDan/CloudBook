@import '/static/iconfont/iconfont.wxss';

.book .book-content {
  padding: 0 40rpx 100rpx;
}

.book .menu {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 998;
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid #f1f1f1;
  background: #fff;
}

.menu .iconfont {
  flex: 1;
  text-align: center;
  font-size: 20px;
}

.menu .iconfont:active {
  background: #f1f1f1;
}

.catalog-menu {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  z-index: 996;
  background: #fff;
  padding-bottom: 100rpx;
  border: 1px solid #f1f1f1;
  width: 680rpx;
  transform: translate3d(-100%,0,0);
  transition: transform .3s ease;
}

.active {
  transform: translate3d(0,0,0)
}

.catalog-menu .catalog-item {
  font-size: 14px;
  height: 70rpx;
  line-height: 70rpx;
  color: #333;
  padding-left: 20rpx;
}

.catalog-item:active {
  background: #f1f1f1;
}

.mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 888;
  background: rgba(0, 0, 0, 0.2)
}

.loading {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 998;
  width: 350rpx;
  height: 350rpx;
}