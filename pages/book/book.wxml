<!--pages/book/book.wxml-->
<import src="/towxml/entry.wxml" />

<view class='book'>
  <image src='/static/img/Cube-1.2s-200px.svg' class='loading' wx:if="{{isLoading}}"></image>
  <view wx:else>

    <view class='book-content'>
      <template is="entry" data="{{...article}}" />
    </view>

    <scroll-view scroll-y class='catalog-menu' wx:if="{{isShow}}">
      <view class='catalog-item' wx:for="{{catalog}}" wx:key="{{index}}"  bindtap="handleGet" data-id="{{item._id}}">
        {{item.title}}
      </view>
    </scroll-view>

    <view class='menu'>
      <view class='iconfont icon-fanhuishangyizhang'></view>
      <view class='iconfont icon-mulu' bindtap="toggleCatalog"></view>
      <view class='iconfont icon-yueduye_zitizengda'></view>
      <view class='iconfont icon-yueduye_zitijianxiao'></view>
      <view class='iconfont icon-xiayizhang'></view>
    </view>
    <view class='mask' wx:if="{{isShow}}" bindtap="toggleCatalog"></view>    

  </view>
</view>