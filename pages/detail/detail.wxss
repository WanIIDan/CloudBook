/* pages/detail/detail.wxss */

.loading {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 998;
  width: 350rpx;
  height: 350rpx;
}

.book-details {
  padding: 20rpx 20rpx 40rpx 20rpx;
  border-bottom: 8rpx solid #e9e9e9;
}

.book-details .book-t {
  display: flex;
  /* justify-content: space-between; */
  font-size: 12px;
  color: #444;
}

.book-t .title {
  font-size: 14px; 
  font-weight: 700;
}

.book-t .img {
  width: 220rpx;
  height: 280rpx;
}

.book-t .main-msg {
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-b {
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;  
}

.book-b .btn {
  margin: 0;
  width: 300rpx;
  font-size: 12px;
  background: #e9e9e9;
  text-align: center;
  color: #333;
  border: 1rpx solid #e9e9e9;
}

.book-desc {
  padding: 30rpx 20rpx;
  line-height: 1.5;
  border-bottom: 8rpx solid #e9e9e9;  
}

.book-desc .title {
  font-weight: 700;
  font-size: 15px;
}

.book-desc .desc-main {
  margin-top: 30rpx;
  font-size: 12px;
  color: #333; 
}

.active {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4; 
  overflow: hidden;
}

.book-catalog {
  padding: 0 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 8rpx solid #e9e9e9;    
}

.book-catalog .catalog-l {
  width: 300rpx;
  display: flex;
  justify-content: space-between;
}

.book-catalog .catalog-l .title {
  font-weight: 700;
  font-size: 14px;
  color: #333;   
}

.book-catalog .catalog-l .catalogs {
  font-size: 12px;
  color: #444;
}

.book-catalog .update-time {
  font-size: 12px;
  color: #444;
}

.read-btn-wrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  /* padding: 20rpx; */
}

.read-btn-wrap .btn {
  background: #66f;
  color: #fff;
  font-size: 14px;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}