<!--pages/center/center.wxml-->
<view>
  <view class='box-t'>
    <view class='user'>
      <view class='user-l'>
        <image src='{{userInfo.avatarUrl}}' class='img'></image>    
      </view>
      <view class='user-r'>
        <text class='user-name'>{{userInfo.nickName}}</text>
        <text class='user-text'>这家伙很懒，什么也没有留下</text>
      </view>
    </view>

    <view class='user-more'>
      <view class='user-btn'>
        <text class='text' bindtap='jumpCollect'>{{length}}</text>
        <text class='text' bindtap='jumpCollect'>收藏</text>
      </view>
      <view class='user-btn'>
        <text class='text'>4</text>
        <text class='text'>关注</text>
      </view>
    </view>
  </view>

  <view class='box-b'></view>
</view>


