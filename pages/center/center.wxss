/* pages/center/center.wxss */
page{
  margin: 0;
  padding: 0;
  height: 100%;
}

.box-t {
  background: #435dee;
  font-size: 16px;
}

.box-t .user{
  display: flex;
  padding: 40rpx;
  border-bottom: 1rpx solid #aaf;
}

.user .user-l .img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.user-r{
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.user-r .user-text {
  font-size: 14px;
}

.box-t .user-more {
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
}

.box-t .user-more .user-btn {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: center;
}