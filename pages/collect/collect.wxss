/* pages/collect/collect.wxss */

.book {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding:0 20rpx;
}

.book .box {
  display: flex;
  justify-content:flex-start;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 310rpx;
  height:420rpx;
  margin: 30rpx 10rpx;
}

.book .box .img {
  width: 230rpx;
  height: 320rpx;
  box-shadow:0 0 20rpx 0 #888;
  margin-bottom: 20rpx;
}

.box .book-title {
  font-size: 14px;
  color: #444;
}